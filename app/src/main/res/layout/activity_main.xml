<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/color8">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/color8"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edukasi Hewan Vertebrata"
            android:fontFamily="@font/lemon_days"
            android:textColor="@color/color6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:textSize="25sp"
            android:id="@+id/L_txt1"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logoapk"
            android:layout_below="@id/L_txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/L_img1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/L_txt1"
            android:padding="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/ly_2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_shape"
                android:hint="Username"
                android:shadowColor="@color/color4"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:layout_marginTop="150dp"
                android:id="@+id/edt_email"
                android:fontFamily="sans-serif"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_shape"
                android:hint="Password"
                android:shadowColor="@color/color4"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/edt_password"
                android:fontFamily="sans-serif"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="LOGIN"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:width="300dp"
                android:backgroundTint="@color/color6"
                android:fontFamily="@font/glossy"
                android:textColor="@color/white"
                android:id="@+id/L_btn1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/L_btn1"
                android:gravity="center"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:fontFamily="@font/glossy"
                    android:textSize="20sp"
                    android:id="@+id/txt3"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/txt_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/glossy"
                    android:onClick="onRegisterClick"
                    android:text="Register"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>