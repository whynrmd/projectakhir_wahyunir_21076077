<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KategoriActivity"
    android:background="@color/color8">

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/lemon_days"
        android:textColor="@color/color6"
        android:gravity="center"
        android:padding="10dp"
        android:text="Kategori Hewan"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/desc2"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/hey_comic"
        android:textColor="@color/color6"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/mamalia"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnMamalia"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:text="Mamalia"
        android:textSize="20sp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/hey_comic"
        android:textColor="@color/color2"
        android:backgroundTint="@color/color6"/>

    <Button
        android:id="@+id/btnIkan"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:text="Ikan"
        android:textSize="20sp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/hey_comic"
        android:textColor="@color/color2"
        android:backgroundTint="@color/color6"/>

    <Button
        android:id="@+id/btnAmfibi"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:text="Amfibi"
        android:textSize="20sp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/hey_comic"
        android:textColor="@color/color2"
        android:backgroundTint="@color/color6"/>

    <Button
        android:id="@+id/btnReptil"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:text="Reptil"
        android:textSize="20sp"
        android:layout_height="50dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/hey_comic"
        android:textColor="@color/color2"
        android:backgroundTint="@color/color6"/>

    <Button
        android:id="@+id/btnBurung"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:text="Burung"
        android:textSize="20sp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/hey_comic"
        android:textColor="@color/color2"
        android:backgroundTint="@color/color6"/>

</RelativeLayout>